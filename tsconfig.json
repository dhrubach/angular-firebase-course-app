{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "es2015",
        "target": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "skipLibCheck": true,
		"types": [
			"chalk",
			"lodash",
			"node",
			"source-map",
			"tapable",
			"uglify-js",
			"webpack"
		]
    },
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.spec.ts"
	]
}
